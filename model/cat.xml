<mujoco model="cat">
  <compiler angle="radian"/>
  <option timestep="0.01">
    <flag contact="disable"/>
  </option>

  <default>
    <joint limited="true" damping="0.1" armature="0.01"/>
    <motor ctrllimited="true" ctrlrange="-3.0 3.0"/>
  </default>

  <asset>
    <material name="grey" rgba="0.5 0.5 0.5 1"/>
    <material name="white" rgba="0.9 0.9 0.9 1"/>
    <material name="black" rgba="0.1 0.1 0.1 1"/>
  </asset>

  <worldbody>
    <light directional="true" diffuse=".8 .8 .8" pos="0 0 10" dir="0 0 -1"/>

    <geom name="floor" type="plane" size="0 0 0.05" material="grey"/>
    <body name="front_body" pos="0 0 3">
      <freejoint name="root"/>
      <inertial pos="0 0 0" mass="0.6" diaginertia="0.002 0.002 0.002"/>
      <geom type="box" size="0.05 0.05 0.05" material="white"/>
      
      <body name="spine_1" pos="0.1 0 0">
        <joint name="rot1" type="hinge" axis="1 0 0" range="-14 14"/>
        <inertial pos="0 0 0" mass="0.001" diaginertia="0.00001 0.00001 0.00001"/>
        <geom type="cylinder" size="0.03 0.01" pos="0 -0.01 0" euler="1.5708 0 0" material="white"/>

        <body name="spine_2" pos="0.0 0 0">
          <joint name="pitch" type="hinge" axis="0 1 0" range="-1.57 1.57"/>
        <inertial pos="0 0 0" mass="0.001" diaginertia="0.00001 0.00001 0.00001"/>
          <geom type="cylinder" size="0.03 0.01" pos="0 0.01 0" euler="1.5708 0 0" material="black"/>

          <body name="rear_body" pos="0.1 0 0">
            <joint name="rot2" type="hinge" axis="1 0 0" range="-14 14"/>
            <inertial pos="0 0 0" mass="0.6" diaginertia="0.00167 0.00167 0.00167"/>
            <geom type="box" size="0.05 0.05 0.05" material="black"/>

            <body name="tail" pos="0.1 0 0">
              <joint name="tail" type="hinge" axis="0 1 0" range="-1.57 1.57"/>
              <inertial pos="0.075 0 0" mass="0.00001" diaginertia="0.00001 0.00038 0.00038"/>
              <geom type="cylinder" size="0.01 0.075" pos="0.075 0 0" euler="0 1.5708 0" material="grey"/>
            </body>
            
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="motor1" joint="rot1"/>
    <motor name="motor2" joint="pitch"/>
    <motor name="motor3" joint="rot2"/>
    <motor name="motor4" joint="tail"/>
  </actuator>

</mujoco>